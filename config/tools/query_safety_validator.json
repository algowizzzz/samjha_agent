{
  "name": "query_safety_validator",
  "implementation": "external.tools.query_safety_validator.QuerySafetyValidatorTool",
  "description": "Validate SQL queries for safety and enforce limits",
  "version": "1.0.0",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "query": { "type": "string" },
      "enforce_limit": { "type": "boolean", "default": true },
      "default_limit": { "type": "integer", "default": 100 }
    },
    "required": ["query"]
  }
}


